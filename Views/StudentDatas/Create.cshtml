@model AcademicPerformanceSystem.Models.StudentData

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="StudentName" class="control-label"></label>
        <input asp-for="StudentName" class="form-control" />
        <span asp-validation-for="StudentName" class="text-danger"></span>
        
    </div>
    <div class="form-group">
        <label asp-for="ExamScore" class="control-label"></label>
        <input asp-for="ExamScore" class="form-control" />
        <span asp-validation-for="ExamScore" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AttendanceRate" class="control-label"></label>
        <input asp-for="AttendanceRate" class="form-control" />
        <span asp-validation-for="AttendanceRate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PracticalScore" class="control-label"></label>
        <input asp-for="PracticalScore" class="form-control" />
        <span asp-validation-for="PracticalScore" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProjectScore" class="control-label"></label>
        <input asp-for="ProjectScore" class="form-control" />
        <span asp-validation-for="ProjectScore" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>